<Page x:Class="Zhurikhin_523.Pages.Page3"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:wf="clr-namespace:System.Windows.Forms.DataVisualization.Charting;assembly=System.Windows.Forms.DataVisualization"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Zhurikhin_523.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Таблица и график">
    <ScrollViewer VerticalScrollBarVisibility="Auto"
                  HorizontalScrollBarVisibility="Auto"
                  Padding="10">
        <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Image Grid.Row="0" Source="/Images/formula_3.jpg" Height="80" Margin="0,0,0,10"
               Stretch="Uniform" ToolTip="y = a · x³ + cos²(x³ − b)" />

        <GroupBox Grid.Row="1" Header="Параметры функции" Margin="0,0,0,10">
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" Text="a ="   Margin="5,5,5,2" VerticalAlignment="Center"/>
                <TextBox   Grid.Row="0" Grid.Column="1" x:Name="tbA"  Margin="5" ToolTip="Коэффициент a"/>

                <TextBlock Grid.Row="0" Grid.Column="2" Text="b ="   Margin="15,5,5,2" VerticalAlignment="Center"/>
                <TextBox   Grid.Row="0" Grid.Column="3" x:Name="tbB"  Margin="5" ToolTip="Сдвиг b"/>

                <TextBlock Grid.Row="1" Grid.Column="0" Text="x₀ ="  Margin="5,2,5,2" VerticalAlignment="Center"/>
                <TextBox   Grid.Row="1" Grid.Column="1" x:Name="tbX0" Margin="5" ToolTip="Начало интервала"/>

                <TextBlock Grid.Row="1" Grid.Column="2" Text="xₖ ="  Margin="15,2,5,2" VerticalAlignment="Center"/>
                <TextBox   Grid.Row="1" Grid.Column="3" x:Name="tbXk" Margin="5" ToolTip="Конец интервала"/>

                <TextBlock Grid.Row="2" Grid.Column="0" Text="dx ="  Margin="5,2,5,5" VerticalAlignment="Center"/>
                <TextBox   Grid.Row="2" Grid.Column="1" x:Name="tbDx" Margin="5" ToolTip="Шаг (может быть отрицательным)"/>
            </Grid>
        </GroupBox>

        <GroupBox Grid.Row="2" Header="Значения x и y" Margin="0,0,0,10">
            <TextBox x:Name="tbTable" Margin="8" IsReadOnly="True" AcceptsReturn="True"
                     VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto"
                     FontFamily="Consolas" FontSize="13" ToolTip="Список вычисленных точек"/>
        </GroupBox>

        <GroupBox Grid.Row="3" Header="График функции">
            <WindowsFormsHost Name="hostChart" Margin="5">
                <wf:Chart x:Name="chart">
                    <wf:Chart.ChartAreas>
                        <wf:ChartArea Name="mainArea" />
                    </wf:Chart.ChartAreas>
                    <wf:Chart.Legends>
                        <wf:Legend Name="legendMain" Docking="Top" Enabled="True" />
                    </wf:Chart.Legends>
                </wf:Chart>
            </WindowsFormsHost>
        </GroupBox>

        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,12">
            <Button Content="Вычислить и построить" Width="180" Margin="10" Click="BtnCalculate_Click" ToolTip="Запустить расчёт и построение"/>
            <Button Content="Очистить" Width="140" Margin="10" Click="BtnClear_Click" ToolTip="Очистить все поля и график"/>
        </StackPanel>
    </Grid>
        </ScrollViewer>
</Page>